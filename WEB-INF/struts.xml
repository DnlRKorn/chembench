<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <constant name="struts.multipart.maxSize" value="52428800" /><!-- no files over 50 MB allowed; defaults to 2MB if unset -->

    <package name="default" namespace="/" extends="struts-default">
                
        <default-action-ref name="index" />
		
		<global-results>
		<result name="login">jsp/main/home.jsp</result>
		</global-results>
		
       <!-- Main pages -->
       <action name="index">
           <result>jsp/main/home.jsp</result>
       </action>
        
       <action name="error">
            <result>jsp/main/errors2.jsp</result>
       </action>
        
       <!-- User Registration and Edit Profile Pages -->
       <action name="loadRegistrationPage" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="loadUserRegistration">
            <result>jsp/administration/user/registrationForm.jsp</result>
        </action>
        
        <action name="registerUser" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="RegisterUser">
            <result name="success">jsp/administration/user/registrationApprovalMessage.jsp</result>
			<result name="error">jsp/administration/user/registrationForm.jsp</result>
        </action>
        
        <action name="editProfile" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="loadEditProfilePage">
            <result name="success">jsp/administration/user/editProfile.jsp</result>
        </action>
        
        <action name="loadChangePasswordSection" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="loadChangePassword">
            <result name="success">jsp/administration/user/editProfile-changePassword.jsp</result>
        </action>
        
        <action name="changePassword" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="ChangePassword">
            <result name="success">jsp/administration/user/editProfile.jsp</result>
        </action>
        
        <action name="loadUpdateInfoSection" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="loadUpdateUserInformation">
            <result name="success">jsp/administration/user/editProfile-updateInfo.jsp</result>
        </action>
        
        <action name="updateUserInfo" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="UpdateUserInformation">
            <result name="success">jsp/administration/user/editProfile.jsp</result>
        </action>
        
        <action name="loadUserOptionsSection" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="loadUpdateUserOptions">
            <result name="success">jsp/administration/user/editProfile-options.jsp</result>
        </action>
        
        <action name="updateUserOptions" class="edu.unc.ceccr.action.UserRegistrationAndProfileActions" method="UpdateUserOptions">
            <result name="success">jsp/administration/user/editProfile.jsp</result>
        </action>
        
        <!-- Dataset Page -->
        <action name="dataset" class="edu.unc.ceccr.action.DatasetFormActions" method="loadPage">
        	<result name="success">jsp/dataSet/dataset.jsp</result>
        </action>
        
        <action name="submitDataset" class="edu.unc.ceccr.action.DatasetFormActions" method="execute">
        	<result name="input" type="redirect">jobs</result>
			<result name="error">jsp/main/errors2.jsp</result>
        </action>
        
        <action name="loadModelingSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadModeling">
        	<result>jsp/dataSet/dataset-modeling.jsp</result>
        </action>
        
        <action name="loadPredictionSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadPrediction">
        	<result>jsp/dataSet/dataset-prediction.jsp</result>
        </action>
        
        <action name="loadModelingWithDescriptorsSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadModelingWithDescriptors">
        	<result>jsp/dataSet/dataset-modelingWithDescriptors.jsp</result>
        </action>
        
        <action name="loadPredictionWithDescriptorsSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadPredictionWithDescriptors">
        	<result>jsp/dataSet/dataset-predictionWithDescriptors.jsp</result>
        </action>
        
        <action name="loadAutoExternalSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadAutoSplit">
        	<result>jsp/dataSet/dataset-autosplit.jsp</result>
        </action>
        
        <action name="loadManualExternalSection" class="edu.unc.ceccr.action.DatasetFormActions" method="ajaxLoadManualSplit">
        	<result>jsp/dataSet/dataset-manualsplit.jsp</result>
        </action>
        <!-- End Dataset Page -->
        
        <!-- Modeling Page -->
        <action name="modeling" class="edu.unc.ceccr.action.ModelingFormActions" method="loadPage">
        	<result>jsp/modeling/modeling.jsp</result>
        </action>
        
        <action name="createModelingJob" class="edu.unc.ceccr.action.ModelingFormActions" method="execute">
        	<result type="redirect">jobs</result>
        </action>
        
        <action name="loadKnnSection" class="edu.unc.ceccr.action.ModelingFormActions" method="ajaxLoadKnn">
        	<result>jsp/modeling/modeling-knn.jsp</result>
        </action>
        
        <action name="loadSvmSection" class="edu.unc.ceccr.action.ModelingFormActions" method="ajaxLoadSvm">
        	<result>jsp/modeling/modeling-svm-dummy.jsp</result>
        </action>
        
        <action name="loadRandomInternalSplitSection" class="edu.unc.ceccr.action.ModelingFormActions" method="ajaxLoadRandomSplit">
        	<result>jsp/modeling/modeling-randomsplit.jsp</result>
        </action>
        
        <action name="loadSphereInternalSplitSection" class="edu.unc.ceccr.action.ModelingFormActions" method="ajaxLoadSphereSplit">
        	<result>jsp/modeling/modeling-spheresplit.jsp</result>
        </action>
        <!-- End Modeling Page -->
        
        <!-- Make Predictions Pages -->
	    <action name="prediction" class="edu.unc.ceccr.action.PredictionFormActions" method="loadSelectPredictorPage">
	        <result>jsp/prediction/selectPredictor.jsp</result>
	    </action>
	    
	    <action name="selectPredictor" class="edu.unc.ceccr.action.PredictionFormActions" method="loadMakePredictionsPage">
	        <result>jsp/prediction/makePredictions.jsp</result>
	    </action>
        
	    <action name="makeDatasetPrediction" class="edu.unc.ceccr.action.PredictionFormActions" method="makeDatasetPrediction">
	        <result type="redirect">jobs</result>
	    </action>
	    
	    <action name="makeSmilesPrediction" class="edu.unc.ceccr.action.PredictionFormActions" method="makeSmilesPrediction">
	        <result>/jsp/prediction/predictionResults.jsp</result>
	    </action>
        <!-- End Make Predictions Pages -->
        
        <!-- Jobs Page -->
        <action name="jobs" class="edu.unc.ceccr.action.JobsActions" method="loadPage">
        	<result>jsp/jobs/jobs.jsp</result>
        </action>
        
        <!-- End Jobs Page -->
        
        <!-- View Dataset Page -->
        <action name="viewDataset" class="edu.unc.ceccr.action.ViewDataset" method="loadPage">
        	<result>jsp/dataSet/viewDataset.jsp</result>
        </action>
        
        <action name="viewDatasetCompoundsSection" class="edu.unc.ceccr.action.ViewDataset" method="loadCompoundsSection">
        	<result>jsp/dataSet/viewDataset-compounds.jsp</result>
        </action>
        
        <action name="viewDatasetExternalCompoundsSection" class="edu.unc.ceccr.action.ViewDataset" method="loadExternalCompoundsSection">
        	<result>jsp/dataSet/viewDataset-externalCompounds.jsp</result>
        </action>
        
        <action name="viewDatasetVisualizationSection" class="edu.unc.ceccr.action.ViewDataset" method="loadVisualizationSection">
        	<result>jsp/dataSet/viewDataset-visualization.jsp</result>
        </action>
        
        <action name="viewDatasetWarningsSection" class="edu.unc.ceccr.action.ViewDataset" method="loadWarningsSection">
        	<result>jsp/dataSet/viewDataset-warnings.jsp</result>
        </action>
        
        <!-- End View Dataset Page -->
        
        <!-- View Predictor Page -->
        <action name="viewPredictor" class="edu.unc.ceccr.action.ViewPredictorAction" method="loadPage">
        	<result>jsp/modeling/viewPredictor.jsp</result>
        </action>
        <!-- End View Predictor Page -->
        
        <!-- View Prediction Page -->
        <action name="viewPrediction" class="edu.unc.ceccr.action.ViewPredictionAction" method="loadPage">
        	<result>jsp/prediction/viewPrediction.jsp</result>
        </action>
        
        <action name="viewPredictionPredictionsSection" class="edu.unc.ceccr.action.ViewPredictionAction" method="loadPredictionsSection">
        	<result>jsp/prediction/viewPrediction-predictions.jsp</result>
        </action>
        
        <action name="viewPredictionWarningsSection" class="edu.unc.ceccr.action.ViewPredictionAction" method="loadWarningsSection">
        	<result>jsp/prediction/viewPrediction-predictions.jsp</result>
        </action>
        
        
        <!-- End View Prediction Page -->
        
        <!-- Servlet forwards -->
        <!-- these will forward to a path defined in web.xml. -->
        <action name="imageServlet">
            <result>imageServlet.do</result>
        </action>
        
        <action name="descriptorMatrixServlet">
            <result>descriptorMatrixServlet.do</result>
        </action>
       
        <action name="compound3D">
            <result>compound3D.do</result>
        </action>
        
        <action name="datasetFilesServlet">
            <result>datasetFilesServlet.do</result>
        </action>
        
        <action name="projectFilesServlet">
            <result>projectFilesServlet.do</result>
        </action>
        
        <!-- End Servlet forwards -->
        
        <!-- Delete Actions -->
        <action name="deleteDataset" class="edu.unc.ceccr.action.DeleteAction" method="deleteDataset">
        	<result type="redirect">jobs</result>
        </action>
        
        <action name="deletePredictor" class="edu.unc.ceccr.action.DeleteAction" method="deletePredictor">
        	<result type="redirect">jobs</result>
        </action>
        
        <action name="deletePrediction" class="edu.unc.ceccr.action.DeleteAction" method="deletePrediction">
        	<result type="redirect">jobs</result>
        </action>
        
        <action name="deleteJob" class="edu.unc.ceccr.action.DeleteAction" method="deleteJob">
        	<result type="redirect">jobs</result>
        </action>
        <!-- End Delete Actions -->
        
        <!-- Help forwards -->
        <action name="help-overview">
        	<result>jsp/help/overview.jsp</result>
        </action>
        
        <action name="help-dataset">
        	<result>jsp/help/datasetpage.jsp</result>
        </action>
        
        <action name="help-modeling">
        	<result>jsp/help/modelingpage.jsp</result>
        </action>
        
        <action name="help-prediction">
        	<result>jsp/help/predictionpage.jsp</result>
        </action>
        
        <action name="help-mybench">
        	<result>jsp/help/mybenchpage.jsp</result>
        </action>
        
        <action name="help-knn">
        	<result>jsp/help/knnparams.jsp</result>
        </action>
        
        <action name="help-faq">
        	<result>jsp/help/faq.jsp</result>
        </action>
        
        <action name="help-fileformats">
        	<result>jsp/help/fileformats.jsp</result>
        </action>
        <!-- End Help forwards -->
        
    </package>

    <!-- Add packages here -->

</struts>
