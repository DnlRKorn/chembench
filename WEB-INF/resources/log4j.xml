<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="Ceccr-Log" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/CHEMBENCH/logs/ceccr-debug-%d.log"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1} :%L - %m%n"/>
        </layout>
    </appender>

    <appender name="Hibernate-Log" class="org.apache.log4j.FileAppender">
        <param name="File"   value="/CHEMBENCH/logs/hibernate.log" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1} :%L - %m%n"/>
        </layout>
    </appender>

    <appender name="Utility-Log" class="org.apache.log4j.FileAppender">
        <param name="File"   value="/CHEMBENCH/logs/ceccr.utility.log" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1} :%L - %m%n"/>
        </layout>
    </appender>

    <appender name="Workflow-Log" class="org.apache.log4j.FileAppender">
        <param name="File"   value="/CHEMBENCH/logs/ceccr.workflow.log" />
        <param name="Append" value="false" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1} :%L - %m%n"/>
        </layout>
    </appender>

    <appender name="Jobs-Log" class="org.apache.log4j.rolling.RollingFileAppender">
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/CHEMBENCH/logs/chembench-jobs-%d.log"/>
        </rollingPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1} :%L - %m%n"/>
        </layout>
    </appender>

    <logger name="edu.unc.ceccr" additivity="false">
        <level value="all"/>
        <appender-ref ref="Ceccr-Log"/>
    </logger>

    <logger name="edu.unc.ceccr.action.JobsActions" additivity="false">
        <level value="warn"/>
        <appender-ref ref="Jobs-Log"/>
    </logger>

    <logger name="edu.unc.ceccr.taskObjects.QsarModelingTask" additivity="false">
        <level value="all"/>
        <appender-ref ref="Jobs-Log"/>
    </logger>

    <logger name="edu.unc.ceccr.action.ModelingFormActions" additivity="false">
        <level value="all"/>
        <appender-ref ref="Jobs-Log"/>
    </logger>

    <logger name="edu.unc.ceccr.jobs" additivity="false">
        <level value="all"/>
        <appender-ref ref="Jobs-Log"/>
    </logger>


    <!-- default logging -->
    <root>
        <priority value="error"/>
        <appender-ref ref="Hibernate-Log"/>
    </root>

</log4j:configuration>

